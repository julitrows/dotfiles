Host dev
  Hostname i-05c723898f5166558
  User ubuntu
  IdentityFile ~/.ssh/id_aws
  ProxyCommand ~/.ssh/rmd-aws-ssh-proxy-command.sh %h %r %p ~/.ssh/id_aws.pub
  StrictHostKeyChecking no

